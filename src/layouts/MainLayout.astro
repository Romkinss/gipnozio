---
import BaseLayout from './BaseLayout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title?: string;
  description?: string;
  image?: string;
}

const { 
  title = 'ГИПНОЗИО - Eurasian Academy of Hypnosis', 
  description = 'Professional training in hypnotherapy and coaching with international certification.',
  image = '/og-image.png'
} = Astro.props;
---

<BaseLayout title={title} description={description} image={image}>
  <Navbar />
  <main class="flex-grow">
    <slot />
  </main>
  <Footer />
</BaseLayout>

<style is:global>
  body {
    display: flex;
    flex-direction: column;
    min-height: 100vh;
  }

  main {
    flex: 1;
  }
</style>
