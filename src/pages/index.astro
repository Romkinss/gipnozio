import CallToAction from '../components/CallToAction.astro';
import Warning from '../components/Warning.astro';
import Footer from '../components/Footer.astro';

const seoData = {
  title: 'GIPNOZIO Academy - Обучение гипнотерапии онлайн',
  description: 'Полный курс обучения гипнотерапии от основ до продвинутых техник. Научитесь помогать людям и строить успешный бизнес.',
  keywords: ['гипнотерапия', 'обучение', 'гипноз', 'курс', 'онлайн'],
  ogImage: '/og-image.jpg',
};

const schema = {
  '@context': 'https://schema.org',
  '@type': 'Course',
  'name': 'GIPNOZIO Academy - Полный курс гипнотерапии',
  'description': 'Полный курс обучения гипнотерапии от основ до продвинутых техник',
  'provider': {
    '@type': 'Organization',
    'name': 'GIPNOZIO Academy',
    'url': 'https://gipnozio.ru'
  },
  'aggregateRating': {
    '@type': 'AggregateRating',
    'ratingValue': '4.9',
    'ratingCount': '1000'
  }
};
---

<PublicLayout title={seoData.title} description={seoData.description}>
