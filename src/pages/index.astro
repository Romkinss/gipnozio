---
// index.astro - Главная страница (Landing Page)
import PublicLayout from '../layouts/PublicLayout.astro';
import SEO from '../components/common/SEO.astro';
import Hero from '../components/landing/Hero.astro';
import AcademyPulse from '../components/landing/AcademyPulse.astro';
import Resonance from '../components/landing/Resonance.astro';
import Problem from '../components/landing/Problem.astro';
import Solution from '../components/landing/Solution.astro';
import DigitalManifesto from '../components/landing/DigitalManifesto.astro';
import GlobalCareer from '../components/landing/GlobalCareer.astro';
import Stats from '../components/landing/Stats.astro';
import ForWhom from '../components/landing/ForWhom.astro';
import Testimonials from '../components/landing/Testimonials.astro';
import Program from '../components/landing/Program.astro';
import Scarcity from '../components/landing/Scarcity.astro';
import Guarantee from '../components/landing/Guarantee.astro';
import CallToAction from '../components/landing/CallToAction.astro';
import Warning from '../components/landing/Warning.astro';

const seoData = {
  title: 'GIPNOZIO Academy - Обучение гипнотерапии онлайн',
  description: 'Полный курс обучения гипнотерапии от основ до продвинутых техник. Научись помогать людям и строить успешный бизнес.',
  keywords: ['гипнотерапия', 'обучение', 'гипноз', 'курс', 'онлайн'],
  ogImage: '/og-image.jpg',
};

const schema = {
  '@context': 'https://schema.org',
  '@type': 'Course',
  'name': 'GIPNOZIO Academy - Полный курс гипнотерапии',
  'description': 'Полный курс обучения гипнотерапии от основ до продвинутых техник',
  'provider': {
    '@type': 'Organization',
    'name': 'GIPNOZIO Academy',
    'url': 'https://gipnozio.ru'
  },
  'aggregateRating': {
    '@type': 'AggregateRating',
    'ratingValue': '4.9',
    'ratingCount': '1000'
  }
};
---

<PublicLayout title={seoData.title} description={seoData.description}>
  <SEO 
    title={seoData.title}
    description={seoData.description}
    seo={seoData}
    schema={schema}
  />

  <Hero />
  <AcademyPulse />
  <Resonance />
  <Problem />
  <Solution />
  <DigitalManifesto />
  <GlobalCareer />
  <Stats />
  <ForWhom />
  <Testimonials />
  <Program />
  <Scarcity />
  <Guarantee />
  <CallToAction />
  <Warning />
</PublicLayout>
