---
// Stats section
---

<section class="bg-light py-16 md:py-24 px-4">
  <div class="container mx-auto max-w-4xl">
    <!-- Section Title -->
    <div class="text-center mb-12 md:mb-16">
      <h2 class="text-3xl md:text-4xl font-serif font-bold text-dark relative inline-block pb-6 mb-4">
        Наши результаты
        <span class="absolute bottom-0 left-1/2 transform -translate-x-1/2 w-16 h-1 bg-gradient-to-r from-gold to-gold-light rounded-full"></span>
      </h2>
    </div>

    <!-- Stats Grid -->
    <div class="grid md:grid-cols-4 gap-6">
      <div class="text-center p-6 bg-white rounded-lg shadow-sm hover:shadow-md transition-shadow">
        <div class="text-4xl font-bold text-gold mb-2">500+</div>
        <p class="text-gray-600">Выпускников</p>
      </div>

      <div class="text-center p-6 bg-white rounded-lg shadow-sm hover:shadow-md transition-shadow">
        <div class="text-4xl font-bold text-gold mb-2">95%</div>
        <p class="text-gray-600">Успешно работают</p>
      </div>

      <div class="text-center p-6 bg-white rounded-lg shadow-sm hover:shadow-md transition-shadow">
        <div class="text-4xl font-bold text-gold mb-2">$50K+</div>
        <p class="text-gray-600">Средний доход/год</p>
      </div>

      <div class="text-center p-6 bg-white rounded-lg shadow-sm hover:shadow-md transition-shadow">
        <div class="text-4xl font-bold text-gold mb-2">10K+</div>
        <p class="text-gray-600">Помощь клиентам</p>
      </div>
    </div>
  </div>
</section>
